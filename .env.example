# FlibustaUserAssistBot Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Telegram Bot Configuration
# ============================================

# Your Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================
# OpenRouter API Configuration
# ============================================

# Your OpenRouter API Key (get from https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# AI Model to use (default: DeepSeek v3.1 - free tier)
OPENROUTER_MODEL=nex-agi/deepseek-v3.1-nex-n1:free

# API timeout in seconds
OPENROUTER_TIMEOUT=30

# ============================================
# Bot Behavior Configuration
# ============================================

# Target bot username (without @)
TARGET_BOT_USERNAME=FlibustaRuBot

# Your bot's username (without @)
BOT_USERNAME=FlibustaAssistantBot

# ============================================
# Logging Configuration
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE_PATH=logs/bot.log

# Maximum log file size in MB
LOG_MAX_SIZE_MB=10

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================
# Configuration File Paths
# ============================================

# Path to bot configuration YAML file
CONFIG_PATH=config/bot_config.yaml

# Path to AI instruction markdown file
AI_INSTRUCTION_PATH=config/ai_instruction.md

# ============================================
# Hot Reload Configuration
# ============================================

# Enable hot-reload of config files (true/false)
HOT_RELOAD_ENABLED=true

# Check interval for file changes in seconds
HOT_RELOAD_CHECK_INTERVAL=5

# ============================================
# Telegram Chat Configuration
# ============================================

# Group chat IDs where bot should respond (comma-separated)
# Leave empty to respond in all groups
# Example: GROUP_CHAT_IDS=-1001234567890,-1000987654321
GROUP_CHAT_IDS=

# Admin user IDs (comma-separated for multiple admins)
# These users can access admin commands
# Example: ADMIN_USER_IDS=123456789,987654321
ADMIN_USER_IDS=

# ============================================
# AI Response Configuration
# ============================================

# Temperature for AI responses (0.0 - 2.0)
# Lower = more deterministic, Higher = more creative
AI_TEMPERATURE=0.7

# Maximum tokens in AI response
AI_MAX_TOKENS=500

# ============================================
# Development & Debugging
# ============================================

# Enable debug mode (true/false)
DEBUG=false

# Enable verbose logging (true/false)
VERBOSE=false

# ============================================
# Notes
# ============================================

# 1. Never commit .env file to version control!
# 2. Keep your API keys secure
# 3. Use environment-specific .env files (.env.production, .env.staging, etc.)
# 4. Restart the bot after changing .env file